unit Unit1;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, Grids, StdCtrls, ExtCtrls;

type
  TForm1 = class(TForm)
    RadioGroup1: TRadioGroup;
    Button1: TButton;
    StringGrid1: TStringGrid;
    procedure Button1Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  x1: string = '10010010111';
  x2: string = '11000101001';
  y2: string = '00010000111';
  Ae, Ah, Ag, mas: array [1..11] of byte;
  Form1: TForm1;

implementation

{$R *.dfm}

procedure TForm1.Button1Click(Sender: TObject);
var i,j: integer;
    e, g, h: byte;
    cur: byte;
begin
  case radiogroup1.ItemIndex of
    0: begin
         //«аполнение регистров
         for i:= 1 to 11 do
           Ae[i]:= StrToInt(x1[i]);
         for i:= 1 to 11 do
           Ah[i]:= StrToInt(x1[i]);
         for i:= 1 to 11 do
           Ag[i]:= StrToInt(x1[i]);

         for i := 0 to 11 do
           begin
               //регистр 1
               mas := Ae;
               e:=Ae[1] xor Ae[3] xor Ae[7] xor Ae[9] xor Ae[10];
               for j:= 11 downto 2 do
                 Ae[j] := mas[j-1];
               Ae[1]:=e;

               //регистр 2
               mas := Ah;
               h:=Ah[1] xor Ah[3] xor Ah[6] xor Ah[9];
               for j:= 1 to 10 do
                 Ah[j+1] := mas[j];
               Ah[11]:=h;

               //регистр 3
               mas := Ag;
               g:=Ag[1] xor Ag[6] xor Ag[7] xor Ag[9] xor Ag[10];
               for j:= 1 to 10 do
                 Ag[j+1] := mas[j];
               Ag[11]:=g;

               cur:= Ae[11] xor Ah[1] xor Ag[1];
               Stringgrid1.Cells[i,0]:=InttoStr(cur);
           end;
       end;
    1: begin
         //«аполнение регистров
         for i:= 1 to 11 do
           Ae[i]:= StrToInt(x1[i]);
         for i:= 1 to 11 do
           Ah[i]:= StrToInt(x1[i]);
         for i:= 1 to 11 do
           Ag[i]:= StrToInt(x1[i]);

         for i := 0 to 11 do
           begin
               //регистр 1
               mas := Ae;
               e:=Ae[1] xor Ae[3] xor Ae[7] xor Ae[9] xor Ae[10];
               for j:= 11 downto 2 do
                 Ae[j] := mas[j-1];
               Ae[1]:=e;

               //регистр 2
               mas := Ah;
               h:=Ah[1] xor Ah[3] xor Ah[6] xor Ah[9];
               for j:= 1 to 10 do
                 Ah[j+1] := mas[j];
               Ah[11]:=h;

               //регистр 3
               mas := Ag;
               g:=Ag[1] xor Ag[6] xor Ag[7] xor Ag[9] xor Ag[10];
               for j:= 1 to 10 do
                 Ag[j+1] := mas[j];
               Ag[11]:=g;

               cur:= Ae[11] xor Ah[1] xor Ag[1];
               Stringgrid1.Cells[i,0]:=InttoStr(cur);
           end;
       end;
  end;
end;

end.
